# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="MOSDAC AI Knowledge Navigator"
APP_VERSION="1.0.0"
APP_ENV="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST="0.0.0.0"
PORT=8000
BACKEND_URL="http://localhost:8000"
FRONTEND_URL="http://localhost:3000"
API_PREFIX="/api/v1"

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL Database
DATABASE_URL="postgresql://user:password@localhost:5432/mosdac_db"
DATABASE_HOST="localhost"
DATABASE_PORT=5432
DATABASE_NAME="mosdac_db"
DATABASE_USER="postgres"
DATABASE_PASSWORD="password"

# =============================================================================
# GRAPH DATABASE SETTINGS (Neo4j)
# =============================================================================
NEO4J_URI="bolt://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="password"
NEO4J_DATABASE="neo4j"

# =============================================================================
# VECTOR DATABASE SETTINGS
# =============================================================================
# FAISS Configuration
FAISS_INDEX_PATH="./data/vectors/faiss_index"
VECTOR_DIMENSION=1536

# Pinecone Configuration (Alternative)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp"
PINECONE_INDEX_NAME="mosdac-index"

# =============================================================================
# REDIS SETTINGS
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""

# =============================================================================
# AI/ML SETTINGS
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_EMBEDDING_MODEL="text-embedding-3-large"
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY="your-langchain-api-key"
LANGCHAIN_PROJECT="mosdac-ai-navigator"

# Hugging Face Configuration
HUGGINGFACE_API_KEY="your-huggingface-api-key"
HUGGINGFACE_MODEL="sentence-transformers/all-MiniLM-L6-v2"

# =============================================================================
# MOSDAC SCRAPING SETTINGS
# =============================================================================
MOSDAC_BASE_URL="https://mosdac.gov.in"
MOSDAC_API_ENDPOINT="https://mosdac.gov.in/api"
MOSDAC_LOGIN_URL="https://mosdac.gov.in/login"
MOSDAC_USERNAME="your-mosdac-username"
MOSDAC_PASSWORD="your-mosdac-password"

# Scraping Configuration
SCRAPING_DELAY=1  # seconds between requests
SCRAPING_CONCURRENT_REQUESTS=5
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_TIMEOUT=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"
CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

# Grafana Settings
GRAFANA_URL="http://localhost:3001"
GRAFANA_USERNAME="admin"
GRAFANA_PASSWORD="admin"

# Logging Configuration
LOG_FORMAT="json"  # json, text
LOG_FILE_PATH="./logs/application.log"
LOG_MAX_SIZE="10MB"
LOG_BACKUP_COUNT=5

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Configuration (for notifications)
EMAIL_SMTP_HOST="smtp.gmail.com"
EMAIL_SMTP_PORT=587
EMAIL_USERNAME="your-email@gmail.com"
EMAIL_PASSWORD="your-app-password"
EMAIL_FROM="noreply@mosdac-ai.com"

# Slack Notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CHAT_HISTORY=true
ENABLE_MULTILINGUAL=true
ENABLE_VOICE_INTERFACE=false
ENABLE_DATA_VISUALIZATION=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Cache Settings
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000

# Worker Settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development Tools
ENABLE_DOCS=true
ENABLE_SWAGGER=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=true

# Testing
TEST_DATABASE_URL="postgresql://user:password@localhost:5432/mosdac_test_db"
TEST_REDIS_URL="redis://localhost:6379/1"

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================
# Docker Settings
DOCKER_REGISTRY="your-registry.com"
DOCKER_IMAGE_TAG="latest"

# Kubernetes Settings
K8S_NAMESPACE="mosdac-ai"
K8S_REPLICAS=3

# Health Check Settings
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# =============================================================================
# ANALYTICS & TELEMETRY
# =============================================================================
# Google Analytics
GA_TRACKING_ID="GA-XXXXXXXXX"

# User Analytics
ANALYTICS_ENABLED=true
ANALYTICS_ENDPOINT="https://analytics.example.com/api/events"

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="mosdac-backups"

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="mosdac-data-storage"